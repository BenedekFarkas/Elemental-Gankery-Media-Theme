<article class="guild-application2 content-item detail">
    <header>
        {{ Model.Header | Display }}
        <div class="metadata">
            Szerző: {{ Model.ContentItem.CommonPart.Owner.UserName }} | {{ Model.Meta | Display }}
        </div>
    </header>
    <div class="content">
        <div class="guild-application-section">
            <h2>Karaktereid</h2>
            <ul>
                <li>{{ Model.MainKarakter | Display }}</li>
                <li>
                    <a href="{{ Model.ContentItem.GuildApplication2Part.MainKarakterArmoryLink.Value }}" target="_blank">Armory Link</a>
                </li>
                <li>
                    <a href="{{ Model.ContentItem.GuildApplication2Part.NoncombatScreenshotURL.Value }}" target="_blank">Combat-on kívüli screenshot</a>
                </li>
                <li>
                    <a href="{{ Model.ContentItem.GuildApplication2Part.CombatScreenshotURL.Value }}" target="_blank">Combat screenshot</a>
                </li>
                <li>
                    <a href="{{ Model.ContentItem.GuildApplication2Part.CombatLogURL.Value }}" target="_blank">Combat log</a>
                </li>
                <li>{{ Model.AltKarakterek | Display }}</li>
            </ul>
        </div>
        <div class="guild-application-section">
            <h2>Raid tapasztalat és történet</h2>
            <ul>
                <li>{{ Model.RaidTapasztalat | Display }}</li>
                <li>
                    Raid napok: <em>{{ Model.ContentItem.GuildApplication2Part.RaidNapok.Value }}</em>
                </li>
                <li>{{ Model.Hianyzas | Display }}</li>
                <li>{{ Model.Abbahagyas | Display }}</li>
                <li>{{ Model.EmlekezetesPillanat | Display }}</li>
                <li>
                    Referenciák a guild-ből: <em>{{ Model.ContentItem.GuildApplication2Part.Referencia.Value }}</em>
                </li>
            </ul>
        </div>
        <div class="guild-application-section">
            <h2>Elérhetőség</h2>
            <ul>
                <li>
                    Hang kommunikáció megy? <em>{{ Model.ContentItem.GuildApplication2Part.Kommunikacio.Value }}</em>
                </li>
                <li>
                    Elérhetősége(i)d: <em>{{ Model.ContentItem.GuildApplication2Part.Elerhetoseg.Value }}</em>
                </li>
            </ul>
        </div>
        <div class="guild-application-section">
            <h2>Egyéb</h2>
            <ul>
                <li>
                    Internetkapcsolatod: <em>{{ Model.ContentItem.GuildApplication2Part.Internetkapcsolat.Value }}</em>
                </li>
                <li>
                    FPS-ed raid közben: <em>{{ Model.ContentItem.GuildApplication2Part.RaidFPS.Value }}</em>
                </li>
                <li>
                    Bossfight-okat fel tudsz venni? <em>{{ Model.ContentItem.GuildApplication2Part.BossfightFelvetel.Value }}</em>
                </li>
                <li>
                    Ismered a SimCraft-ot? <em>{{ Model.ContentItem.GuildApplication2Part.SimCraftIsmeret.Value }}</em>
                </li>
                <li>
                    Ha igen, használod? <em>{{ Model.ContentItem.GuildApplication2Part.SimCraftHasznalat.Value }}</em>
                </li>
                <li>{{ Model.Felkeszules | Display }}</li>
                <li>{{ Model.Elvarasok | Display }}</li>
                <li>{{ Model.Egyeb | Display }}</li>
            </ul>
        </div>
    </div>
    <footer>
        {{ Model.Footer | Display }}
    </footer>
</article>