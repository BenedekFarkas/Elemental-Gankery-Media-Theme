<ul>
    <li>
        <a href="https://worldofwarcraft.com/en-gb/character/ragnaros/{{ Model.ContentItem.MainCharacter.Name.Value }}">{{ Model.ContentItem.MainCharacter.Name.Value }}</a>
        {% if Model.ContentItem.MainCharacter.Class.Value != null %}

        {% case Model.ContentItem.MainCharacter.Class.Value %}
        {% when "Death Knight" %}
        {% assign normalizedclassname = "deathknight" %}

        {% when "Demon Hunter" %}
        {% assign normalizedclassname = "demonhunter" %}

        {% when "Druid" %}
        {% assign normalizedclassname = "druid" %}

        {% when "Hunter" %}
        {% assign normalizedclassname = "hunter" %}

        {% when "Mage" %}
        {% assign normalizedclassname = "mage" %}

        {% when "Monk" %}
        {% assign normalizedclassname = "monk" %}

        {% when "Paladin" %}
        {% assign normalizedclassname = "paladin" %}

        {% when "Priest" %}
        {% assign normalizedclassname = "priest" %}

        {% when "Rogue" %}
        {% assign normalizedclassname = "rogue" %}

        {% when "Shaman" %}
        {% assign normalizedclassname = "shaman" %}

        {% when "Warlock" %}
        {% assign normalizedclassname = "warlock" %}

        {% when "Warrior" %}
        {% assign normalizedclassname = "warrior" %}

        {% else %}
        {% assign normalizedclassname = "none" %}
        {% endcase %}

        (<span class="class-color-{{ normalizedclassname }}">{{ Model.ContentItem.MainCharacter.Class.Value }}</span>)
        {% endif %}
    </li>

    {% if Model.ContentItem.MainCharacter.Name.Value != Model.ContentItem.UserPart.UserName %}
    <li>Felhasználó: {{ Model.ContentItem.UserPart.UserName }}</li>
    {% endif %}
</ul>